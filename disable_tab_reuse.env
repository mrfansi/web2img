# Emergency configuration to disable tab reuse
# Use this if the tab pool is causing issues

# Disable tab reuse to fall back to traditional context-based approach
ENABLE_TAB_REUSE=false

# Set max tabs per browser to 1 (traditional behavior)
MAX_TABS_PER_BROWSER=1

# Optional: Increase browser pool size to compensate for lack of tab reuse
BROWSER_POOL_MIN_SIZE=16
BROWSER_POOL_MAX_SIZE=64

# Optional: Increase timeouts for better reliability
NAVIGATION_TIMEOUT_REGULAR=30000
NAVIGATION_TIMEOUT_COMPLEX=60000
CONTEXT_CREATION_TIMEOUT=45000

# Log level for debugging
LOG_LEVEL=INFO
